@page
@model SimulatorTrade.Pages.Trade.IndexModel
@{
    ViewData["Title"] = "Trading";
}
<h1>Trading (demo)</h1>
<form method="post" class="card">
  <div class="row"><label>Símbolo</label><input asp-for="Input.Symbol" /></div>
  <div class="row"><label>Tipo</label><select asp-for="Input.Type"><option>Market</option><option>Limit</option></select></div>
  <div class="row"><label>Side</label><select asp-for="Input.Side"><option>Buy</option><option>Sell</option></select></div>
  <div class="row"><label>Cantidad</label><input asp-for="Input.Quantity" type="number" step="0.0001" /></div>
  <div class="row"><label>Precio Límite</label><input asp-for="Input.Price" type="number" step="0.0001" /></div>
  <button class="btn" type="submit">Enviar</button>
  @if (!string.IsNullOrWhiteSpace(Model.Message)){<p class="muted">@Model.Message</p>}
</form>
