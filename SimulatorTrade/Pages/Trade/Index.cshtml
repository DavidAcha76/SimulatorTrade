@page
@model SimulatorTrade.Pages.Trade.IndexModel
@{
    ViewData["Title"] = "Trading";
}

<style>
    body {
        font-family: 'Inter', sans-serif;
        background: #0e1117;
        color: #e0e6ed;
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #00bfa6;
        margin-bottom: 30px;
    }

    .card {
        background: #161b22;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 0 10px #0d1117;
        max-width: 450px;
        margin: 0 auto 30px auto;
    }

    .row {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
    }

    label {
        font-weight: 600;
        margin-bottom: 5px;
        color: #9ca3af;
    }

    input, select {
        background: #0d1117;
        border: 1px solid #30363d;
        color: #e0e6ed;
        padding: 8px;
        border-radius: 5px;
    }

        input:focus, select:focus {
            outline: none;
            border-color: #00bfa6;
        }

    .btn {
        width: 100%;
        background: #00bfa6;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s ease;
    }

        .btn:hover {
            background: #00a58d;
        }

    p.muted {
        text-align: center;
        margin-top: 15px;
        color: #a1a1aa;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        max-width: 450px;
        margin: 0 auto;
        background: #161b22;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 10px #0d1117;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        border-bottom: 1px solid #30363d;
        color: #e0e6ed;
    }

    th {
        background: #0d1117;
        font-weight: 700;
    }

    tbody tr:last-child td {
        border-bottom: none;
    }
</style>

<h1>@ViewData["Title"] (demo)</h1>

<form method="post" class="card">
    <div class="row">
        <label for="Symbol">Símbolo</label>
        <input asp-for="Input.Symbol" id="Symbol" />
    </div>
    <div class="row">
        <label for="Type">Tipo</label>
        <select asp-for="Input.Type" id="Type">
            <option>Market</option>
            <option>Limit</option>
        </select>
    </div>
    <div class="row">
        <label for="Side">Side</label>
        <select asp-for="Input.Side" id="Side">
            <option>Buy</option>
            <option>Sell</option>
        </select>
    </div>
    <div class="row">
        <label for="Quantity">Cantidad</label>
        <input asp-for="Input.Quantity" id="Quantity" type="number" step="0.0001" />
    </div>
    <div class="row">
        <label for="Price">Precio Límite</label>
        <input asp-for="Input.Price" id="Price" type="number" step="0.0001" />
    </div>
    <button type="submit" class="btn">Enviar</button>
    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <p class="muted">@Model.Message</p>
    }
</form>

@if (Model.Portfolio != null)
{
    <h2 style="text-align:center; color:#00bfa6;">Portafolio Actual</h2>
    <p style="text-align:center; color:#e0e6ed;">Cash disponible: <strong>@Model.Portfolio.Cash</strong></p>

    <table>
        <thead>
            <tr>
                <th>Activo</th>
                <th>Cantidad</th>
                <th>Precio Promedio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pos in Model.Portfolio.Positions)
            {
                <tr>
                    <td>@pos.AssetId</td>
                    <td>@pos.Quantity</td>
                    <td>@pos.AvgPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
